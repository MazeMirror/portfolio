        grid.appendChild(card);
    });

    console.log(`‚úÖ ${filteredProjects.length} cards appended to grid`);
    console.log('üìä Grid children count:', grid.children.length);

    updateLoadMoreButton(filteredProjects.length, visibleCount);
}

